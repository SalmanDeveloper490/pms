<%- include('components/header.ejs')%>
  
<%- include('components/navbar.ejs')%>
  
<body>
      
  <div class="login__form inner__form mb-5">
      <% if(messages.error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong><%= messages.error %></strong>
        <button
          type="button"
          class="btn-close"
          data-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %>
      <% if(messages.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong><%= messages.success %></strong>
          <button
            type="button"
            class="btn-close"
            data-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %>
      <form class="row g-3" action="/view_password_details/edit" method="post">
        <input type="hidden" value="<%= data._id %>" name="hiddenInput" />
        <div class="form-group">
        <label>Edit Password Category</label>
          <input type="text" name="password_cat_name" class="form-control" value="<%= data.password_cat_name %>" />
        </div>
        <div class="form-group">
            <label>Edit Password Details</label>
            <textarea name="password_details" class="form-control" value="<%= data.password_details %>" ><%= data.password_details %></textarea>
        </div>
        <div class="col-12">
          <button type="submit" class="custom-btn">Submit</button>
        </div>
      </form>
  </div>
          

  <!-- scripts -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.bundle.min.js" integrity="sha384-BOsAfwzjNJHrJ8cZidOg56tcQWfp6y72vEJ8xQ9w6Quywb24iOsW913URv1IS4GD" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" integrity="sha512-F5QTlBqZlvuBEs9LQPqc1iZv2UMxcVXezbHzomzS6Df4MZMClge/8+gXrKw2fl5ysdk4rWjR0vKS7NNkfymaBQ==" crossorigin="anonymous"></script>
  <!--  -->
  </body>
</html>