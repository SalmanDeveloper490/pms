<%- include('components/header.ejs')%>
  
<%- include('components/navbar.ejs')%>
  
<body>
      
  <div class="login__form inner__form mb-5">
      <% if(messages.error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong><%= messages.error %></strong>
        <button
          type="button"
          class="btn-close"
          data-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %>
      <% if(messages.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong><%= messages.success %></strong>
          <button
            type="button"
            class="btn-close"
            data-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %>
      <form class="row g-3" action="/add_password_details" method="post">
        <div class="form-group">
        <label>Select Password Category</label>
        <select class="form-select" name="password_cat_name">
            <% if(data.length > 0) { %>
            <% data.forEach((data) => { %>
              <option value="<%= data.pass_cat_name %>"><%= data.pass_cat_name %></option>
            <% }) %>
            <% } %>
          </select>
        </div>
        <div class="form-group">
            <label>Add Password Details</label>
            <textarea name="password_details" class="form-control" rows="5"></textarea>
        </div>
        <div class="col-12">
          <button type="submit" class="custom-btn">Submit</button>
        </div>
      </form>
      <div class="link">
         <a href="/view_password_details">All Password Details</a>
      </div>
  </div>
          

  <!-- scripts -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.bundle.min.js" integrity="sha384-BOsAfwzjNJHrJ8cZidOg56tcQWfp6y72vEJ8xQ9w6Quywb24iOsW913URv1IS4GD" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" integrity="sha512-F5QTlBqZlvuBEs9LQPqc1iZv2UMxcVXezbHzomzS6Df4MZMClge/8+gXrKw2fl5ysdk4rWjR0vKS7NNkfymaBQ==" crossorigin="anonymous"></script>
  <!--  -->
  </body>
</html>